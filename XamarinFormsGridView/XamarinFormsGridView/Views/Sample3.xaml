                <controls:GridViewXamlCell>
                    <Grid Padding="5">
                        <Grid BackgroundColor="{Binding Color}" Padding="10" >
                            <Label Text="{Binding Color}" FontSize="Small" TextColor="White" VerticalOptions="Fill"/>
                        </Grid>
                    </Grid>
                </controls:GridViewXamlCell>
            </DataTemplate>
            <DataTemplate x:Key="evenTemplate">
                <controls:GridViewXamlCell>
                    <Grid Padding="5">
